html(lang='en')
	head
		title BtPlayer
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')

		// Clear VAST data to force ad playback
		script(type='text/javascript').
			localStorage.removeItem('lastSuccessfullAd')
			localStorage.removeItem('totalCalls')
			localStorage.removeItem('totalCallsTimeout')

		// Bitmovin Player
		script(type='text/javascript', src='https://bitmovin-a.akamaihd.net/bitmovin-player/stable/8/bitmovinplayer.js')
		script(type='text/javascript', src='/comscore.streaming.min.js')

		style.
			body {
				font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
			}
			figure {
				margin: 0;
				padding: 0;
			}
			.container {
				color: white;
				text-align: center;
			}
			.container a {
				color: white;
			}
			.container h1 {
				margin-bottom: 22px;
				line-height: 66px;
			}
			.container h2 {
				font-weight: normal;
				margin-bottom: 36px;
				line-height: 26px;
			}
			.player-wrapper {
				width: 95%;
				margin: 20px auto;
				box-shadow: 0 0 30px rgba(0,0,0,0.7);
			}
		style
			include ./partials/nav.css

	body
		include ./partials/nav.pug

		block body

		.container
			.content
				.player-wrapper
					#player

		block script
